
@{
    Layout = "_Layout1";
}
@model empclass.Register

<form method="post">         
  <div  style="width:500px; margin-left:300px" >
      
    <h1>Add Employee</h1>
    
    <hr>
     
    
    <label ><b>First Name</b></label> 
    <input type="text" asp-for="Firstname" required  class="form-control">
    

    
    <label><b>Last Name</b></label>
    <input type="text" asp-for="Lastname" required class="form-control">
   
    
    <label><b>E-mail</b></label>
    <input type="text" asp-for="Email" required class="form-control">

     <label><b>Password</b></label>
    <input type="password" asp-for="Passwords" required class="form-control">


    <tr>
      
  <td > <label ><b>Select Gender</b></label></td> 
  <td><input type="radio" asp-for=Gender  value ="Male"/>Male
 <input type="radio" asp-for=Gender  value="Female" />Female</td> 
 
 
 </tr>
 <br />

  <br />

    
  <label><b>Enter DOB</b></label>

  <input type="date" max="2000-12-12" min="1965-01-01"  asp-for=Dob class="form-control" />

     <label><b>Phone No</b></label>
    <input type="text" asp-for="Mobile" required class="form-control"><br><br>


   
   
       <label><b>Role</b></label>

   <select asp-for=Designation>
        
        
         <option value="Developer" >Developer</option>
        
        <option value="Tester">Tester</option>
        
   
    <option value="Designer">Designer</option>
   
 </select>

   
   
  <input type="submit" value="AddEmployee" class="btn btn-success"  />
  
    @*<button type="submit"   class="btn btn-success" style="text-align:center">Add Employee</button><label class="text-danger">*@ @ViewData["Check"]</label>
   
    
    <a asp-action="Employees" class="btn btn-link">Back to Employee</a>
    
    <label class="text-success">@ViewData["a"]</label>
    </div>
    </form>
